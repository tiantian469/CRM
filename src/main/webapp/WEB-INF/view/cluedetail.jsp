<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%
	String basePath = request.getScheme() + "://" +
			request.getServerName() + ":" + request.getServerPort() +
			request.getContextPath() + "/";
%>
<html>
<head>
	<base href="<%=basePath%>">

	<link href="static/jquery/bootstrap_3.3.0/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
	<link href="static/jquery/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.min.css" type="text/css" rel="stylesheet" />

	<script type="text/javascript" src="static/jquery/jquery-1.11.1-min.js"></script>
	<script type="text/javascript" src="static/jquery/bootstrap_3.3.0/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="static/jquery/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.js"></script>
	<script type="text/javascript" src="static/jquery/bootstrap-datetimepicker-master/locale/bootstrap-datetimepicker.zh-CN.js"></script>
	<link rel="stylesheet" type="text/css" href="static/jquery/bs_pagination/jquery.bs_pagination.min.css">
	<script type="text/javascript" src="static/jquery/bs_pagination/jquery.bs_pagination.min.js"></script>
	<script type="text/javascript" src="static/jquery/bs_pagination/en.js"></script>

<script type="text/javascript">

	//默认情况下取消和保存按钮是隐藏的
	var cancelAndSaveBtnDefault = true;
	
	$(function(){
		showRemarkList();
		showActivityList();
		$("#remarkBody").on("mouseover",".remarkDiv",function(){
			$(this).children("div").children("div").show();
		})
		$("#remarkBody").on("mouseout",".remarkDiv",function(){
			$(this).children("div").children("div").hide();
		})
		$("#remark").focus(function(){
			if(cancelAndSaveBtnDefault){
				//设置remarkDiv的高度为130px
				$("#remarkDiv").css("height","130px");
				//显示
				$("#cancelAndSaveBtn").show("2000");
				cancelAndSaveBtnDefault = false;
			}
		});
		
		$("#cancelBtn").click(function(){
			//显示
			$("#cancelAndSaveBtn").hide();
			//设置remarkDiv的高度为130px
			$("#remarkDiv").css("height","90px");
			cancelAndSaveBtnDefault = true;
		});
		
		$(".remarkDiv").mouseover(function(){
			$(this).children("div").children("div").show();
		});
		
		$(".remarkDiv").mouseout(function(){
			$(this).children("div").children("div").hide();
		});
		
		$(".myHref").mouseover(function(){
			$(this).children("span").css("color","red");
		});
		
		$(".myHref").mouseout(function(){
			$(this).children("span").css("color","#E6E6E6");
		});
		$("#editBTN").click(function () {
			$.ajax({
				url:"user/queryAllUser.do",
				type:"get",
				dataType:"json",
				error:function () {
					alert("发生了未知的异常，请联系幽灵猫...");
				},
				success:function (response) {
					var html = "";
					$.each(response,function (index,element) {
						html += "<option value='"+element.id+"'>"+element.name+"</option>";
					})
					var id = "${sessionScope.user.id}"
					$("#edit-clueOwner").html(html);
					$("#edit-clueOwner").val(id);
					$("#edit-call").val("${appellation}");
					$("#edit-source").val("${source}");
					$("#edit-status").val("${state}");
					$("#editClueModal").modal("show");
				}
			})
		})
		$("#updateBTN").click(function () {
			var id = "${id}";
			$.ajax({
				url:"clue/editClue.do",
				data:{
					"id":"${id}",
					"fullname":$.trim($("#edit-surname").val()),
					"appellation":$.trim($("#edit-call").val()),
					"owner":$.trim($("#edit-clueOwner").val()),
					"company":$.trim($("#edit-company").val()),
					"job":$.trim($("#edit-job").val()),
					"email":$.trim($("#edit-email").val()),
					"phone":$.trim($("#edit-phone").val()),
					"website":$.trim($("#edit-website").val()),
					"mphone":$.trim($("#edit-mphone").val()),
					"state":$.trim($("#edit-status").val()),
					"source":$.trim($("#edit-source").val()),
					"description":$.trim($("#edit-describe").val()),
					"contactSummar":$.trim($("#edit-contactSummary").val()),
					"nextContactTie":$.trim($("#edit-nextContactTime").val()),
					"address":$.trim($("#edit-address").val())
				},
				type:"post",
				dataType:"json",
				error:function () {
					alert("发生了未知的异常，请联系幽灵猫...");
				},
				success:function (response) {
					if (response.success){
						alert("修改该线索成功！");
						window.location.href='clue/clueDetail.do?id='+id+'';
					}
				}
			})
		})
		$("#deleteBTN").click(function () {
			var id = "${id}";
			if (confirm("确定要删除这条线索？")){
				$.ajax({
					url:"clue/deleteClueInDetail.do",
					data:{"id":id},
					type:"post",
					dataType:"json",
					error:function () {
						alert("发生了未知的异常，请联系幽灵猫...");
					},
					success:function (response) {
						if (response.success){
							alert("删除线索成功！");
							window.location.href="static/workbench/clue/index.jsp";
						}else {alert("因未知原因导致删除失败，请联系幽灵猫...");}
					}
				})
			}
		})
		$("#createRemarkBTN").click(function () {
			var clueId = "${id}";
			$.ajax({
				url:"clue/addClueRemark.do",
				data:{
					"noteContent":$("#remark").val(),
					"clueId":clueId
				},
				type:"post",
				dataType:"json",
				error:function () {
					alert("发生了未知的异常，请联系幽灵猫...");
				},
				success:function (response) {
					if (response.success){
						alert("添加备注成功！");
						$("#remark").val("");
						var html = "";
						$.each(response.clueRemark,function (index,element) {
							html += '<div class="remarkDiv" style="height: 60px;" id="'+element.id+'">';
							html += '<img title="zhangsan" src="static/image/user-thumbnail.png" style="width: 30px; height:30px;">';
							html += '<div style="position: relative; top: -40px; left: 40px;" >';
							html += '<h5 id="n'+element.id+'">'+element.noteContent+'</h5>';
							html += '<font color="gray">线索</font> <font color="gray">-</font> <b>${fullname}${appellation}-${company}</b> <small style="color: gray;"> '+(element.editFlag==="0"?element.createTime:element.editTime)+' 由'+(element.editFlag==="0"?element.createBy:element.editBy)+'</small>';
							html += '<div style="position: relative; left: 500px; top: -30px; height: 30px; width: 100px; display: none;">';
							html += '<a class="myHref" href="javascript:void(0);" onclick="editRemark(\''+element.id+'\')"><span class="glyphicon glyphicon-edit" style="font-size: 20px; color: #FF0000;"></span></a>';
							html += '&nbsp;&nbsp;&nbsp;&nbsp;';
							html += '<a class="myHref" href="javascript:void(0);" onclick="removeRemark(\''+element.id+'\')"><span class="glyphicon glyphicon-remove" style="font-size: 20px; color: #FF0000;"></span></a>';
							html += '</div>';
							html += '</div>';
							html += '</div>';
						})
						$("#remarkDiv").before(html);
					}else {
						alert("因未知原因添加备注失败，请联系幽灵猫...");
					}
				}
			})
		})
		$("#updateRemarkBtn").click(function () {
			var id = $("#remarkId").val();
			$.ajax({
				url:"clue/editClueRemark.do",
				data:{
					"id":$.trim($("#remarkId").val()),
					"noteContent":$.trim($("#noteContent").val())
				},
				type:"post",
				dataType:"json",
				error:function () {
					alert("发生了未知的异常，请联系幽灵猫...");
				},
				success:function (response) {
					if (response.success){
						alert("修改备注成功！");
						$("#n"+id).html($("#noteContent").val());
						$("#editRemarkModal").modal("hide");
						$("#noteContent").val("");
					}else {alert("因未知原因导致修改失败，请联系幽灵猫...");}
				}
			})
		})
		$("#openActivity").click(function () {
			pageList(1,5);
			$("#bundModal").modal("show");
		})
		$("#inputText").keydown(function (event) {
			if (event.keyCode === 13){
				$("#inputTextVal").val($.trim($("#inputText").val()))
				pageList(1,5);
				return false;
			}
		})
		$("#checkAll").click(function () {
			$("input[name=check]").prop("checked",this.checked);
		})
		$("#allActivity").on("click",$("input[name=check]"),function () {
			$("#checkAll").prop("checked",$("input[name=check]").length === $("input[name=check]:checked").length);
		})
		$("#relation").click(function () {
			var id = "${id}";
			var $xz = $("input[name=check]:checked");
			if ($xz.length === 0){
				alert("请选择至少一条关联！");
			}else {
				var param = "";
				for (var i = 0;i < $xz.length; i++){
					param += "activityId=" + $($xz[i]).val();
					if (i < $xz.length-1){
						param += "&";
					}
				}
				param += "&clueId="+id+"";
			}
			$.ajax({
				url:"clue/addRelation.do",
				data:param,
				type:"post",
				dataType:"json",
				error:function () {
					alert("发生了未知的异常，请联系幽灵猫...");
				},
				success:function (response) {
					if (response.success){
						alert("添加关联成功！");
						$("#bundModal").modal("hide");
						window.location.href='clue/clueDetail.do?id='+id+'';
					}else {alert("因未知原因导致关联失败，请联系幽灵猫...");}
				}
			})
		})
	});
	function editRemark(id){
		$("#noteContent").val($("#n"+id).html());
		$("#editRemarkModal").modal("show");
		$("#remarkId").val(id);
	}
	function removeRemark(id){
		$.ajax({
			url:"clue/deleteClueRemark.do",
			data:{"id":id},
			type:"post",
			dataType:"json",
			error:function () {
				alert("发生了未知的异常，请联系幽灵猫...");
			},
			success:function (response) {
				if (response.success){
					alert("删除备注成功！");
					$("#"+id).remove();
				}else {alert("因未知原因导致删除失败，请联系幽灵猫...");}
			}
		})
	}
	function showRemarkList() {
		var id = "${id}";
		$.ajax({
			url:"clue/queryClueRemarkWithClueID.do",
			data:{"id":id},
			type:"get",
			dataType:"json",
			error:function () {
				alert("发生了未知的异常，请联系幽灵猫...");
			},
			success:function (response) {
				var html = "";
				$.each(response,function (index,element) {
					html += '<div class="remarkDiv" style="height: 60px;" id="'+element.id+'">';
					html += '<img title="zhangsan" src="static/image/user-thumbnail.png" style="width: 30px; height:30px;">';
					html += '<div style="position: relative; top: -40px; left: 40px;" >';
					html += '<h5 id="n'+element.id+'">'+element.noteContent+'</h5>';
					html += '<font color="gray">线索</font> <font color="gray">-</font> <b>${fullname}-${company}</b> <small style="color: gray;"> '+(element.editFlag==="0"?element.createTime:element.editTime)+' 由'+(element.editFlag==="0"?element.createBy:element.editBy)+'</small>';
					html += '<div style="position: relative; left: 500px; top: -30px; height: 30px; width: 100px; display: none;">';
					html += '<a class="myHref" href="javascript:void(0);" onclick="editRemark(\''+element.id+'\')"><span class="glyphicon glyphicon-edit" style="font-size: 20px; color: #FF0000;"></span></a>';
					html += '&nbsp;&nbsp;&nbsp;&nbsp;';
					html += '<a class="myHref" href="javascript:void(0);" onclick="removeRemark(\''+element.id+'\')"><span class="glyphicon glyphicon-remove" style="font-size: 20px; color: #FF0000;"></span></a>';
					html += '</div>';
					html += '</div>';
					html += '</div>';
				})
				$("#remarkDiv").before(html);
			}
		})
	}
	function showActivityList(){
		$.ajax({
			url:"clue/queryActivityWithClueID.do",
			data:{"id":"${id}"},
			type:"get",
			dataType:"json",
			error:function () {
				alert("发生了未知的异常，请联系幽灵猫...");
			},
			success(response){
				var html = "";
				$.each(response,function (index,element) {
					html += '<tr id="'+element.id+'">'
					html += '<td>'+element.name+'</td>'
					html += '<td>'+element.startDate+'</td>'
					html += '<td>'+element.endDate+'</td>'
					html += '<td>'+element.owner+'</td>'
					html += '<td><a href="javascript:void(0);" style="text-decoration: none;" onclick="removeRelation(\''+element.id+'\')"><span class="glyphicon glyphicon-remove"></span>解除关联</a></td>'
					html += '</tr>'
				})
				$("#activityRelation").html(html);
			}
		})
	}
	function removeRelation(id) {
		if (confirm("确定要删除这条关联？")){
			$.ajax({
				url:"clue/deleteRelationWithID.do",
				data:{id},
				type:"post",
				dataType:"json",
				error:function () {
					alert("发生了未知的异常，请联系幽灵猫...");
				},
				success:function (response) {
					if (response.success){
						alert("删除关联成功！");
						$("#"+id).remove();
					}else {alert("因未知原因删除失败，请联系幽灵猫...");}
				}
			})
		}
	}
	function pageList(pageNo,pageSize) {
		$("#qx").prop("checked",false);
		$("#inputText").val($.trim($("#inputTextVal").val()));
		$.ajax({
			url:"clue/queryActivityNotInRelation.do",
			data:{
				"id":"${id}",
				"name":$("#inputText").val(),
				"pageNo":pageNo,
				"pageSize":pageSize
			},
			type:"get",
			dataType:"json",
			error:function () {
				alert("发生了未知的异常，请联系幽灵猫...");
			},
			success:function (response) {
				var html = "";
				$.each(response.pageList, function (index,element) {
					html += '<tr>'
					html += '<td><input type="checkbox" value="'+element.id+'" name="check"/></td>'
					html += '<td>'+element.name+'</td>'
					html += '<td>'+element.startDate+'</td>'
					html += '<td>'+element.endDate+'</td>'
					html += '<td>'+element.owner+'</td>'
					html += '</tr>'
				})
				$("#allActivity").html(html);
				var totalPages = response.total % pageSize === 0?response.total / pageSize : parseInt(response.total / pageSize) + 1;
				$("#page").bs_pagination({
					currentPage: pageNo, // 页码
					rowsPerPage: pageSize, // 每页显示的记录条数
					maxRowsPerPage: 10, // 每页最多显示的记录条数
					totalPages: totalPages, // 总页数
					totalRows: response.total, // 总记录条数

					visiblePageLinks: 3, // 显示几个卡片

					showGoToPage: true,
					showRowsPerPage: true,
					showRowsInfo: true,
					showRowsDefaultInfo: true,

					onChangePage : function(event, data){
						pageList(data.currentPage , data.rowsPerPage);
					}
				});

			}
		})
	}
</script>

</head>
<body>
